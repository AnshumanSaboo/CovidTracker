<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ContactActivity"
    android:background="#EEF3FF">

    <include layout="@layout/main_top_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="152dp"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/undraw_happy_feeling_slmw"
        android:id="@+id/emptyimage"
        android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emptyimage"
            android:text="Nothing yet"
            android:textSize="22dp"
            android:fontFamily="EuropaNuova"
            android:textStyle="bold"
            android:textColor="#15135B"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="124.5dp"
            android:id="@+id/nothing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You haven't been in close proximity with only infected people"
            android:layout_below="@id/nothing"
            android:textSize="17dp"
            android:id="@+id/ded"
            android:fontFamily="EuropaNuova-Regular"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="17dp"
            android:textColor="#15135B"
            android:layout_marginTop="24dp"/>


    </RelativeLayout>


</LinearLayout>